<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteca.Views.Product.VPPrincipal"
             Title="Products">
  
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Frame HasShadow="True" CornerRadius="50" Padding="5" Margin="30,20">
                <StackLayout>
                    <Entry Placeholder="Buscar..."/>
                </StackLayout>
            </Frame>
            <Grid ColumnDefinitions="*,*,*">
                <Button Grid.Column="0" Text="Hotel" CornerRadius="50" Margin="10,0" BackgroundColor="LightSeaGreen" FontAttributes="Bold" TextColor="White"/>
                <Button Grid.Column="1" Text="Hotel" CornerRadius="50" Margin="10,0"/>
                <Button Grid.Column="2" Text="Hotel" CornerRadius="50" Margin="10,0"/>
            </Grid>
            <Frame Padding="0" Margin="30,20" CornerRadius="50" HeightRequest="200">
                <Image Aspect="AspectFill" Source="https://imgcap.capturetheatlas.com/wp-content/uploads/2021/10/Secrets-Lanzarote-Resort-Spa-mejores-resorts-todo-incluido-Espana.jpg"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>